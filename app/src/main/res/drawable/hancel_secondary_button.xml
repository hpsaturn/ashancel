<selector xmlns:android="http://schemas.android.com/apk/res/android" >
 <item android:state_pressed="true" >
     <shape android:shape="rectangle"  >
         <corners android:radius="3dip" />
         <stroke android:width="1dip" android:color="#887a6d" />
         <gradient android:angle="-90" android:startColor="#5a3d24" android:endColor="#b87e4b"  />            
     </shape>
 </item>
<item android:state_focused="true">
     <shape android:shape="rectangle"  >
         <corners android:radius="3dip" />
         <stroke android:width="1dip" android:color="#887a6d" />
         <solid android:color="#58857e"/>       
     </shape>
 </item>  
<item >
    <shape android:shape="rectangle"  >
         <corners android:radius="3dip" />
         <stroke android:width="1dip" android:color="#887a6d" />
         <gradient android:angle="-90" android:startColor="#d9c3ae" android:endColor="#5f554c" />
     </shape>
 </item>
</selector>
